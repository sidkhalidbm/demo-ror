<h1 class="ml-2"><%= @post.title %></h1>
<p class="ml-5"><%= @post.body %></h1>
<p class="text-muted"> by <%= @post.user_id %> </p>

<% if @user_itself %>
    <%= link_to 'Edit', edit_post_path, class:"btn btn-primary" %>
    <%= link_to 'Delete', post_path, class:"btn btn-danger", method: "delete" %>
<% end %>